{
    "manifest_version": 2,
    "name": "G-Translate on Right Click",
    "description": "Adds Translate with Google Translate to Right Click options",
    "version": "1.0",
  
    "icons": {
        "48": "images/icon-48.png"
    },
    "background": {
        "scripts": ["background.js"]
    },
    "permissions": [
        "contextMenus",
        "storage",
        "<all_urls>",
        "tabs"
    ],
    "browser_action": {
        "default_icon": "images/icon-48.png",
        "default_title": "Translate Text",
        "default_popup": "web/popup.html"
    },
    "options_ui": {
        "page": "web/settings.html",
        "browser_style": true
    }
}