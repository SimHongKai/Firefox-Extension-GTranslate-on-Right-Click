{
    "manifest_version": 2,
    "name": "G-Translate on Right Click",
    "description": "Adds Translate with Google Translate to Right Click options",
    "version": "1.0",
  
    "icons": {
        "16": "icons/icon-google-translate-16.png",
        "32": "icons/icon-google-translate-32.png",
        "48": "icons/icon-google-translate-48.png",
        "96": "icons/icon-google-translate-96.png",
        "128": "icons/icon-google-translate-128.png"
    },
    "background": {
        "scripts": ["background.js"]
    },
    "permissions": [
        "contextMenus",
        "storage",
        "<all_urls>",
        "tabs"
    ],
    "browser_action": {
        "default_icon": "icons/icon-google-translate-48.png",
        "default_title": "Translate Text",
        "default_popup": "menu/popup.html"
    },
    "options_ui": {
        "page": "menu/settings.html",
        "browser_style": true
    }
}